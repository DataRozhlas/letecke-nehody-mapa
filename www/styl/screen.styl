@import colors
@import prefixes
@import 'components/triangle'

.ig
  @import basics
.ig
  svg
    position absolute
    top 0px
    left 0px
  svg.map
    background lighten(ColorHeadingLink, 98.5%)
    .land
      fill white
      stroke lighten(desaturate(ColorHeadingLink, 90%), 80%)
      stroke-width 1
    .countries
      fill none
      stroke lighten(desaturate(ColorHeadingLink, 90%), 90%)
      stroke-width 1
    .airports-bg circle
      fill lighten(#a50f15, 90%)
    .airports circle
      stroke #a50f15
      fill transparent
      // fill white
      // fill-opacity 0.5
      // fill-opacity 0.8
  svg.voronoi
    path
      fill transparent
      // stroke black

